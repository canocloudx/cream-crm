# ============================================
# C.R.E.A.M. CRM - Staging Environment
# Domain: staging.creamcoff.com
# ============================================

# Application
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info

# Database (Hetzner PostgreSQL - Staging)
DATABASE_URL=postgresql://cream_staging:${DB_PASSWORD}@localhost:5432/cream_staging
POSTGRES_DB=cream_staging
POSTGRES_USER=cream_staging
POSTGRES_PASSWORD=${DB_PASSWORD}

# Apple Wallet (Sandbox)
APPLE_PASS_TYPE_ID=pass.com.creamcoffee.loyalty
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_PASS_CERT_PATH=./certs/pass.p12
APPLE_PASS_CERT_PASSWORD=${PASS_CERT_PASSWORD}
APPLE_PASS_ENV=sandbox

# Apple Push Notifications (Sandbox)
APNS_KEY_ID=YOUR_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_ENV=sandbox

# Security
CORS_ORIGIN=https://staging.creamcoff.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Backup
BACKUP_RETENTION_DAYS=7
