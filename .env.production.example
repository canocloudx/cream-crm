# ============================================
# C.R.E.A.M. CRM - Production Environment
# Copy this to .env.production and fill in values
# ============================================

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://cream_admin:YOUR_PASSWORD@db:5432/cream_crm
DB_HOST=db
DB_PORT=5432
DB_NAME=cream_crm
DB_USER=cream_admin
DB_PASSWORD=YOUR_SECURE_PASSWORD

# PostgreSQL (for Docker)
POSTGRES_DB=cream_crm
POSTGRES_USER=cream_admin
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# Apple Wallet
APPLE_PASS_TYPE_ID=pass.com.creamcoffee.loyalty
APPLE_TEAM_ID=YOUR_TEAM_ID

# ============================================
# Monitoring & Observability
# ============================================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD
GRAFANA_ROOT_URL=https://grafana.yourdomain.com

# Loki (Log Aggregation)
LOKI_HOST=http://loki:3100

# ============================================
# Cloud Backup (Cloudflare R2)
# ============================================

# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET=cream-backups

# Backup retention (number of backups to keep)
LOCAL_BACKUP_RETENTION=7
R2_BACKUP_RETENTION=30
