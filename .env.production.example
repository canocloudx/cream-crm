# ============================================
# C.R.E.A.M. CRM - Production Environment
# Domain: creamcoff.com
# ============================================

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# Database (Hetzner PostgreSQL)
DATABASE_URL=postgresql://cream_admin:${DB_PASSWORD}@localhost:5432/cream_crm
POSTGRES_DB=cream_crm
POSTGRES_USER=cream_admin
POSTGRES_PASSWORD=${DB_PASSWORD}

# Apple Wallet
APPLE_PASS_TYPE_ID=pass.com.creamcoffee.loyalty
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_PASS_CERT_PATH=./certs/pass.p12
APPLE_PASS_CERT_PASSWORD=${PASS_CERT_PASSWORD}
APPLE_PASS_ENV=production

# Apple Push Notifications (for Wallet updates)
APNS_KEY_ID=YOUR_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_ENV=production

# Security
CORS_ORIGIN=https://creamcoff.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Backup (optional - cloud storage)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
BACKUP_RETENTION_DAYS=30

# Monitoring (optional)
SENTRY_DSN=
