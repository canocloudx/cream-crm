{
  "env": {
    "node": true,
    "browser": true,
    "es2022": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "globals": {
    "Chart": "readonly",
    "CreamAPI": "readonly",
    "showToast": "readonly",
    "loadMembers": "readonly",
    "loadStats": "readonly",
    "refreshMemberTable": "readonly",
    "closeModal": "readonly",
    "closeUserModal": "readonly",
    "closeQRCodesModal": "readonly",
    "closeStoreModal": "readonly",
    "updateCharCount": "readonly",
    "addStampToMemberLive": "readonly",
    "redeemRewardLive": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-console": "off",
    "semi": "off",
    "quotes": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "*.min.js"
  ]
}
