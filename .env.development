# ============================================
# C.R.E.A.M. CRM - Development Environment
# Local development only
# ============================================

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://cream_dev:devpassword@localhost:5432/cream_dev
POSTGRES_DB=cream_dev
POSTGRES_USER=cream_dev
POSTGRES_PASSWORD=devpassword

# Apple Wallet (Sandbox)
APPLE_PASS_TYPE_ID=pass.com.creamcoffee.loyalty
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_PASS_CERT_PATH=./certs/pass.p12
APPLE_PASS_CERT_PASSWORD=your_cert_password
APPLE_PASS_ENV=sandbox

# Apple Push Notifications (Sandbox)
APNS_KEY_ID=YOUR_KEY_ID
APNS_TEAM_ID=YOUR_TEAM_ID
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_ENV=sandbox

# Security (permissive for development)
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
