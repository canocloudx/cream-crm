{
  "name": "cream-crm",
  "version": "2.1.0",
  "description": "C.R.E.A.M. Coffee CRM - Loyalty and Rewards Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "migrate": "node database/migrate.js",
    "backup": "bash scripts/backup-db.sh",
    "backup:cloud": "bash scripts/backup-to-cloud.sh",
    "restore:cloud": "bash scripts/restore-from-cloud.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canocloudx/cream-crm.git"
  },
  "keywords": ["crm", "loyalty", "coffee", "rewards", "apple-wallet", "saas"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/canocloudx/cream-crm/issues"
  },
  "homepage": "https://github.com/canocloudx/cream-crm#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "passkit-generator": "^3.5.6",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-loki": "^6.0.8"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.4"
  }
